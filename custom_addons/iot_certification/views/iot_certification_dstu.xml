<odoo>
    <data>
        <record id="view_dstu_tree" model="ir.ui.view">
            <field name="name">iot_certification_dstu.tree</field>
            <field name="model">iot_certification_dstu</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="safety"/>
                    <field name="health"/>
                    <field name="emc"/>
                    <field name="rf_spectrum"/>
                </tree>
            </field>
        </record>

        <!-- Action for Tree View -->
        <record id="action_dstu_tree" model="ir.actions.act_window">
            <field name="name">ДСТУ</field>
            <field name="res_model">iot_certification_dstu</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_dstu_tree"/>
        </record>
    </data>
</odoo>
