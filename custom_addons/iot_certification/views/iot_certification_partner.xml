<odoo>
    <record id="view_res_partner_form_extension" model="ir.ui.view">
        <field name="name">iot.res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="replace">
                <group>
                    <field name="user_id"/>
                    <field name="team_id"/>
                    <field name="duplicated_bank_account_partners_count" attrs="{'invisible': True }"/>
                    <h2>Тип партнера</h2>
                    <field name="partner_type" string="" widget="html_select"/>
                    <h2><br/><br/>Список виробництв<br/></h2>
                    <field name="enterprise_ids" widget="one2many_list" context="{'default_partner_id': active_id}" string="Виробництва">
                        <tree editable="bottom">
                            <field name="name"/>
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
